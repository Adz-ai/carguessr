# Security Configuration
ADMIN_KEY=your-super-secret-admin-key-here
TRUSTED_PROXIES=127.0.0.1,::1,172.16.0.0/12,10.0.0.0/8,192.168.0.0/16

# Rate Limiting
GENERAL_RATE_LIMIT=60     # requests per minute for general API
ADMIN_RATE_LIMIT=2        # requests per minute for admin endpoints

# Security Features  
ENABLE_USER_AGENT_FILTER=true
ENABLE_HONEYPOTS=true
ENABLE_METHOD_FILTER=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/autotraderguesser.log

# Server Configuration
GIN_MODE=release
PORT=8080

# Security Headers
ENABLE_HSTS=true          # HTTP Strict Transport Security
HIDE_SERVER_HEADER=true   # Hide server information

# Scraper Cache Configuration (Temporary Fix)
# Set to "true" or "1" to force using cached data instead of scraping
# Useful when scrapers are failing or need to be disabled temporarily
USE_BONHAMS_CACHE_ONLY=false  # Force Bonhams (Hard mode) to use cache only
USE_LOOKERS_CACHE_ONLY=false  # Force Lookers (Easy mode) to use cache only